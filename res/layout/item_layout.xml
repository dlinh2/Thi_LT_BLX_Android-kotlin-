<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ExamActivity"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:id="@+id/idQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="cau"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Question"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/ques"
        app:layout_constraintStart_toStartOf="@id/idQuestion"
        app:layout_constraintTop_toBottomOf="@id/idQuestion" />
    <RadioGroup
        android:id="@+id/AnswerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/ques"
        android:layout_margin = "20dp"
        android:layout_gravity="end|center"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ques"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ques"
        app:layout_constraintEnd_toEndOf="@id/ques"
        >

        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|start"
            android:gravity="end|start"
            android:text="answer1"
            android:textColor="@color/black"
            />

        <RadioButton
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|start"
            android:text="answer2"
            android:textColor="@color/black"
            />

        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|start"
            android:gravity="end|start"
            android:text="answer3"
            android:textColor="@color/black"
            />

        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|start"
            android:gravity="end|start"
            android:text="answer4"
            android:textColor="@color/black"
            />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
